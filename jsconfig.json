{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2021",
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {
      "/*": ["./*"],
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
